#!/bin/sh

searchr=$(
  fd --type f --hidden --exclude .git . "$HOME/" |
    fzf-tmux -p 80%,60% -i --bind=tab:up --bind=btab:down \
      --bind=ctrl-g:first \
      --preview "bat --color=always --style=numbers --line-range=:500 {}"
)

[ -n "$searchr" ] && echo "nvim $searchr" && nvim "$searchr" || echo "Nothing found"
